<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoWPF"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="ProjetoWPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Margin="0,-32,0,328" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel Margin="20,0,0,0">
                <Label>Indicador:</Label>
                <ListBox HorizontalAlignment="Center" Height="22" VerticalAlignment="Top" Width="75" SelectionChanged="ListBox_SelectionChanged">
                    <ListBoxItem Content="IPCA"/>
                    <ListBoxItem Content="IGP-M"/>
                    <ListBoxItem Content="SELIC"/>
                </ListBox>
            </WrapPanel>
            <WrapPanel Margin="20,0,0,0">
                <Label>Data Início:</Label>
                <DatePicker></DatePicker>
            </WrapPanel>
            <WrapPanel Margin="20,0,0,0">
                <Label>Data Fim:</Label>
                <DatePicker></DatePicker>
            </WrapPanel>
            <Button Margin="20,0,20,0">Exportar como CSV</Button>
        </WrapPanel>
        <Grid Margin="0,73,0,0">
            <TabControl>
                <TabItem Header="Tabela">
                    <DataGrid Name="indicatorDg">
                        
                    </DataGrid>
                </TabItem>
                <TabItem Header="Gráfico"></TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
